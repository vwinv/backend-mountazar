generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  QUOTE_REQUESTED // Demande de devis pour rideaux
  QUOTE_PENDING // Devis en attente d'approbation
  QUOTE_APPROVED // Devis approuvé, prêt pour paiement
  QUOTE_REJECTED // Devis rejeté
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum QuoteStatus {
  PENDING // Devis en attente de traitement par l'admin
  APPROVED // Devis approuvé, prêt pour paiement
  REJECTED // Devis rejeté
  EXPIRED // Devis expiré
}

enum PromotionType {
  PERCENTAGE // Réduction en pourcentage
  FIXED // Réduction en montant fixe
}

enum PaymentStatus {
  PENDING // En attente
  COMPLETED // Payé
  FAILED // Échoué
  REFUNDED // Remboursé
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  PAYPAL
  BANK_TRANSFER
  CASH
  WAVE
  ORANGE_MONEY
  OTHER
}

model User {
  id                Int               @id @default(autoincrement())
  email             String?           @unique
  phone             String?
  password          String
  firstName         String
  lastName          String
  role              UserRole          @default(CUSTOMER)
  orders            Order[]
  shippingAddresses ShippingAddress[]
  notifications     Notification[]
  favorites         Favorite[]
  reviews           Review[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}

model Category {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  description   String?
  products      Product[]
  subCategories SubCategory[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model SubCategory {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([categoryId, name]) // Le nom doit être unique par catégorie
}

model Product {
  id                   Int                @id @default(autoincrement())
  name                 String
  description          String?
  price                Decimal            @default(0)
  stock                Int                @default(0)
  image                String? // Image principale (maintenu pour compatibilité)
  isActive             Boolean            @default(true) // Indique si le produit est actif
  isFeatured           Boolean            @default(false) // Indique si le produit est mis en avant
  isNew                Boolean            @default(false) // Indique si le produit est nouveau
  categoryId           Int? // Optionnel : le produit peut être dans une catégorie
  category             Category?          @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  subCategoryId        Int? // Optionnel : le produit peut être dans une sous-catégorie
  subCategory          SubCategory?       @relation(fields: [subCategoryId], references: [id], onDelete: Cascade)
  customizationOptions Json? // Options de personnalisation disponibles (couleurs, tailles, texte, etc.)
  promotions           ProductPromotion[]
  orderItems           OrderItem[]
  images               ProductImage[] // Toutes les photos du produit
  favorites            Favorite[]
  reviews              Review[]
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String // URL de la photo
  isMain    Boolean  @default(false) // Photo principale
  createdAt DateTime @default(now())
}

model Order {
  id                Int              @id @default(autoincrement())
  userId            Int
  user              User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  total             Decimal          @default(0)
  status            OrderStatus      @default(PENDING)
  requiresQuote     Boolean          @default(false) // Indique si la commande nécessite un devis (rideaux)
  shippingAddressId Int?
  shippingAddress   ShippingAddress? @relation(fields: [shippingAddressId], references: [id], onDelete: SetNull)
  invoice           Invoice?
  quote             Quote? // Devis associé si requiresQuote = true
  items             OrderItem[]
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}

model OrderItem {
  id            Int        @id @default(autoincrement())
  orderId       Int
  order         Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId     Int
  product       Product    @relation(fields: [productId], references: [id])
  quantity      Int        @default(1)
  price         Decimal    @default(0) // Prix unitaire après promotion
  originalPrice Decimal? // Prix unitaire original (avant promotion)
  promotionId   Int? // Promotion appliquée
  promotion     Promotion? @relation(fields: [promotionId], references: [id], onDelete: SetNull)
  customization Json?
}

model ShippingAddress {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label      String? // Nom de l'adresse (ex: "Maison", "Bureau")
  firstName  String
  lastName   String
  address    String
  city       String
  postalCode String
  country    String
  phone      String?
  isDefault  Boolean  @default(false)
  orders     Order[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Promotion {
  id          Int                @id @default(autoincrement())
  name        String
  description String?
  code        String?            @unique // Code promo optionnel
  type        PromotionType
  value       Decimal // Pourcentage (0-100) ou montant fixe selon le type
  banniere    String? // URL de l'image de bannière de la promotion
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean            @default(true)
  minPurchase Decimal? // Montant minimum d'achat pour appliquer la promo
  maxUses     Int? // Nombre maximum d'utilisations (null = illimité)
  currentUses Int                @default(0) // Nombre d'utilisations actuelles
  products    ProductPromotion[]
  orderItems  OrderItem[]
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}

model ProductPromotion {
  id          Int       @id @default(autoincrement())
  productId   Int
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  promotionId Int
  promotion   Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())

  @@unique([productId, promotionId])
}

model Quote {
  id           Int         @id @default(autoincrement())
  orderId      Int         @unique
  order        Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)
  status       QuoteStatus @default(PENDING)
  total        Decimal // Montant du devis (peut différer du total initial de la commande)
  notes        String? // Notes de l'admin
  validUntil   DateTime? // Date d'expiration du devis
  approvedAt   DateTime? // Date d'approbation
  approvedBy   Int? // ID de l'admin qui a approuvé (peut être null si auto-approuvé)
  invoice      Invoice? // Facture créée après approbation
  quoteDetails Json? // Détails du devis: { items: [{ length, width, pricePerMeter, total }], transportFee, discount }
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Invoice {
  id            Int      @id @default(autoincrement())
  invoiceNumber String   @unique // Numéro de facture unique
  orderId       Int      @unique
  order         Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  quoteId       Int?     @unique // Référence au devis si la facture provient d'un devis approuvé
  quote         Quote?   @relation(fields: [quoteId], references: [id], onDelete: SetNull)
  subtotal      Decimal // Sous-total avant taxes
  tax           Decimal  @default(0) // Taxes
  shipping      Decimal  @default(0) // Frais de livraison
  discount      Decimal  @default(0) // Réduction totale
  total         Decimal // Total final
  payment       Payment?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Payment {
  id            Int           @id @default(autoincrement())
  invoiceId     Int           @unique
  invoice       Invoice       @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  amount        Decimal // Montant payé
  method        PaymentMethod // Méthode de paiement
  status        PaymentStatus @default(PENDING)
  transactionId String?       @unique // ID de transaction (ex: Stripe, PayPal)
  receiptUrl    String? // URL du reçu
  invoiceData   String? // Données de la facture sauvegardées (JSON ou PDF en base64)
  paidAt        DateTime? // Date de paiement
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Parametrage {
  id Int @id @default(autoincrement())

  // Informations générales du site vitrine
  siteTitle    String // Titre du site
  siteSubtitle String? // Sous-titre / slogan
  logoUrl      String? // URL du logo (si tu veux stocker le chemin ici)

  // Section "Hero" de la page d'accueil
  heroTitle       String?
  heroSubtitle    String?
  heroBackgrounds Json? // Tableau d'images pour le slider (ex: ["url1", "url2", ...])

  // Section "À propos"
  aboutTitle   String?
  aboutContent String?

  // Valeurs de l'entreprise (section dans À propos)
  valuesTitle   String?
  valuesContent String? // Texte ou liste formatée (ex: en Markdown ou HTML) - legacy
  values        Json? // Liste structurée de valeurs [{ title, content }, ...]

  // Galerie de photos du site vitrine
  galleryImages Json? // Tableau d'images (ex: ["url1", "url2", ...])

  // Coordonnées / pied de page
  contactEmail String?
  contactPhone String?
  address      String?
  facebookUrl  String?
  instagramUrl String?
  twitterUrl   String?
  tiktokUrl    String?

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum NotificationType {
  INFO // Information générale
  SUCCESS // Succès (ex: commande confirmée)
  WARNING // Avertissement
  ERROR // Erreur
  PROMOTION // Promotion spéciale
}

model Notification {
  id        Int              @id @default(autoincrement())
  userId    Int? // null = notification globale (tous les clients), sinon ID du client spécifique
  user      User?            @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String // Titre de la notification
  message   String // Contenu de la notification
  type      NotificationType @default(INFO)
  isRead    Boolean          @default(false) // Indique si le client a lu la notification
  link      String? // URL optionnelle (ex: vers une commande, un produit, etc.)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId]) // Un utilisateur ne peut ajouter un produit qu'une seule fois en favoris
  @@index([userId])
  @@index([productId])
}

model Review {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId  Int
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  rating     Int // Note de 1 à 5
  comment    String? // Commentaire optionnel
  isApproved Boolean  @default(false) // Indique si le commentaire est approuvé par l'admin (modération)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, productId]) // Un utilisateur ne peut laisser qu'un seul avis par produit
  @@index([productId])
  @@index([userId])
  @@index([isApproved])
}
